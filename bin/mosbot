#!/usr/bin/env ruby

require 'mosbot'

# setup environment
MOS_BOT_CONF = ENV['MOS_BOT_CONF'] || "#{ENV['HOME']}/.mosbot.conf"
if File.exists?(MOS_BOT_CONF) then
    File.readlines(MOS_BOT_CONF).each do |line|
        if line.start_with? "#" then
            next 
        else
            key, value = line.split "="
            ENV[key] = value.strip
        end
    end
end

# variables
type            = 'doc'
id              = '0'

# grab command line options
if ARGV.empty?
  type='help'
else
  ARGV.each do |arg|
    case arg
    # parameter is a an id
    when /^[0-9]+(\.)?([0-9])?/
      id   = arg
    when "doc"
      type = 'doc'
    when "bug"
      type = 'bug'
    when "patch"
      type = 'patch'
    when "idea"
      type = 'idea'
    when "-o"
      ENV['MOS_OPEN_URL']="true"
    when "-c"
      ENV['MOS_COPY_URL']="true"
    when " ", "help", "-h", "--help", "/?"
      type='help'
    end
  end
end



# constants
OS_CONST        = os
MOS_COPY_URL    = ENV['MOS_COPY_URL'] || "false"
MOS_OPEN_URL    = ENV['MOS_OPEN_URL'] || "false"

if type == "help" 
  display_help()
else
  mosurl = generate_url(type, id)
  handle_output(mosurl)
end
